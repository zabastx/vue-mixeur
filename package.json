		"three-stdlib": "^2.36.1",
		"three-viewport-gizmo": "^2.2.0",
		"vue": "^3.5.27"
	},
	"devDependencies": {
		"@pinia/testing": "^1.0.3",
		"@playwright/test": "^1.58.0",
		"@testing-library/user-event": "^14.6.1",
